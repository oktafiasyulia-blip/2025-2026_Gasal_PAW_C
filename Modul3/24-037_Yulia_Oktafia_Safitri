<?php
function ganjil($angka) {
    return $angka % 2 === 0;
}
$angka = array(1,3,2,3,4,5,8,7,5,5,6);
var_dump(array_filter($angka, "ganjil"));
?>

<?php
$nama1 = array("fathul", "reli", "aziz");
sort($nama1);
echo "Method sort : <br>";
for($i = 0; $i < count($nama1); $i++) {
    echo $nama1[$i]."<br>";
}
echo "<br>";
$nama2 = array("fathul", "reli", "aziz");
rsort($nama2);
echo "Method lsort : <br>";
for($i = 0; $i < count($nama2); $i++) {
    echo $nama2[$i]."<br>";
}
echo "<br>";
$nama3 = array("depan"=>"fathul", "tengah"=>"reli", "belakang"=>"aziz");
asort($nama3);
echo "Method asort : <br>";
foreach($nama3 as $k => $v) {
    echo "key = ".$k.", value = ".$v."<br>";
}
echo "<br>";
$nama4 = array("depan"=>"fathul", "tengah"=>"reli", "belakang"=>"aziz");
ksort($nama4);
echo "Method ksort : <br>";
foreach($nama4 as $k => $v) {
    echo "key = ".$k.", value = ".$v."<br>";
}
echo "<br>";
$nama5 = array("depan"=>"fathul", "tengah"=>"reli", "belakang"=>"aziz");
arsort($nama5);
echo "Method arsort : <br>";
foreach($nama5 as $k => $v) {
    echo "key = ".$k.", value = ".$v."<br>";
}
echo "<br>";
$nama6 = array("depan"=>"fathul", "tengah"=>"reli", "belakang"=>"aziz");
arsort($nama6);
echo "Method krsort : <br>";
foreach($nama6 as $k => $v) {
    echo "key = ".$k.", value = ".$v."<br>";
}
?>

