<?php 
$students = array(
    array("Alex", "220401", "0812345678"),
    array("Bianca", "220402", "0812345687"),
    array("Candiee", "220403", "0812345665"),

// 3.5.1

    array("aziz", "220404", "0812345666"),
    array("Lana", "220405", "0812345554"),
    array("fathul", "220406", "0812345545"),
    array("najwa", "220407", "0812345445"),
    array("Bima", "220408", "0812345444")
);

for($row = 0; $row < 8; $row++) {
    echo "<p><b>Row number $row</b></p>";
    echo "<ul>";
    for($col = 0; $col < 3; $col++) {
        echo "<li>".$students[$row][$col]."</li>";
    }
    echo "</ul>";
}
?>

<?php 
$students = array(
    array("Alex", "220401", "0812345678"),
    array("Bianca", "220402", "0812345687"),
    array("Candiee", "220403", "0812345665"),

// 3.5.1

    array("aziz", "220404", "0812345666"),
    array("Lana", "220405", "0812345554"),
    array("fathul", "220406", "0812345545"),
    array("najwa", "220407", "0812345445"),
    array("Bima", "220408", "0812345444")
);

for($row = 0; $row < 8; $row++) {
    // echo "<p><b>Row number $row</b></p>";
    echo "<ul>";
    for($col = 0; $col < 3; $col++) {
        // echo "<li>".$students[$row][$col]."</li>";
    }
    echo "</ul>";
}

// 3.5.2

echo "<table border='1' cellpadding='5' cellspacing='0'>";
    echo "<tr>";
        echo "<th>Name</th>";
        echo "<th>NIM</th>";
        echo "<th>Mobile</th>";
    echo "</tr>";
for($row = 0; $row < count($students); $row++) {
    echo "<tr>";
    for($col = 0; $col < count($students[0]); $col++) {
        echo "<td>".$students[$row][$col]."</td>";
    }
    echo "</tr>";
}
echo "</table>";
?>

